{
    "compilerOptions": {
        "target": "es5",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [ "es6", "dom" ]
    },
    "files": [
        "node_modules/typescript/lib/typescriptServices.d.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/__old__/**/*"
    ]
}
